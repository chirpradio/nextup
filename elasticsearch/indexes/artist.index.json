{
  "settings": {
    "number_of_shards": 1, 
    "analysis": {
      "char_filter": {
        "normalize_characters": {
          "type": "mapping",
          "mappings": [
            "& => and",
            "$ => S",
            "ยบ => o"
          ]
        }
      },
      "filter": {
        "catenate": {
          "type": "word_delimiter_graph",
          "catenate_all": true,
          "preserve_original": true
        },
        "asciifolding_original": {
          "type": "asciifolding",
          "preserve_original": true
        }
      },
      "analyzer": {
        "default": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "classic"]
        },
        "normalizer_standard": {
          "type": "custom",
          "char_filter": ["normalize_characters"],
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding", "classic", "catenate"]
        },
        "normalizer_whitespace": {
          "type": "custom",
          "char_filter": ["normalize_characters"],
          "tokenizer": "whitespace",
          "filter": ["lowercase", "asciifolding", "classic", "catenate"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "fields": {
          "normalized_standard": {
            "type": "text",
            "analyzer": "normalizer_standard"
          },
          "normalized_whitespace": {
            "type": "text",
            "analyzer": "normalizer_whitespace"
          },
          "search_as_you_type": {
            "type": "search_as_you_type"
          }
        }
      }      
    }
  }
}